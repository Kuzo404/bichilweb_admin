# ============================================
# Admin Panel - Environment Variables
# Copy this file to .env and fill in the values
# ============================================

# --- Django Backend API ---
# Full API URL with /api/v1 path (used in client-side components)
NEXT_PUBLIC_API_URL=http://your-backend-domain:8000/api/v1

# Media/image base URL without trailing slash (used for image src attributes)
NEXT_PUBLIC_MEDIA_URL=http://your-backend-domain:8000

# Server-side API URL (used in Next.js API routes)
BACKEND_API_URL=http://your-backend-domain:8000/api/v1

# Server-side base URL (used in API routes for general requests)
BACKEND_URL=http://your-backend-domain:8000

# --- Frontend URL ---
NEXT_PUBLIC_FRONTEND_URL=http://your-frontend-domain:3000

# --- Database ---
DATABASE_URL=postgresql://user:password@localhost:5432/ul_bichil

# --- API Token (optional, for backend auth) ---
API_TOKEN=

# --- Environment ---
NODE_ENV=development
